{
    "name": "dcc",
    "version": "0.2.17",
    "author": "Marece Williams",
    "description": "React and Electron Awesome App",
    "homepage": "./",
    "main": "public/main.js",
    "private": true,
    "icon": "icon.ico",
    "dependencies": {
        "@emotion/react": "^11.10.0",
        "@emotion/styled": "^11.10.0",
        "@mui/icons-material": "^5.10.2",
        "@mui/material": "^5.10.2",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.3.0",
        "@testing-library/user-event": "^14.4.3",
        "adm-zip": "^0.5.9",
        "archiver": "^5.3.1",
        "bootstrap": "^5.2.0",
        "electron-updater": "^5.2.1",
        "react": "^18.2.0",
        "react-bootstrap": "^2.5.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.3.0",
        "react-scripts": "5.0.1",
        "react-select": "^5.4.0",
        "serialport": "^10.4.0",
        "usb-detection": "^4.14.1",
        "uuid": "^8.3.2"
    },
    "scripts": {
        "dev": "nf start",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "electron": "electron .",
        "postinstall": "electron-builder install-app-deps",
        "package": "electron-builder build -c.extraMetadata.main=build/main.js --publish never",
        "deploy": "electron-builder build -c.extraMetadata.main=build/main.js --publish always",
        "backup": "git add . && git commit -m %NPM_PACKAGE_VERSION% && git push origin master",
        "upload": "yarn build && yarn backup && yarn deploy ",
        "try": "yarn build && yarn package ",
        "refresh": "yarn upgrade --latest"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "electron": "^20.0.3",
        "electron-builder": "^23.3.3",
        "foreman": "^3.0.1"
    },
    "build": {
        "productName": "Big D's Railroad",
        "appId": "com.wbm.dcc",
        "copyright": "WBM Tek",
        "extends": null,
        "npmRebuild": false,
        "files": [
            "build/**/*",
            "electron/*"
        ],
        "extraResources": [
            "public/locos/*"
        ],
        "win": {
            "icon": "public/icon.ico"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/wbmmusic/dcc.git"
    }
}
